<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Q1 -->
        <TextView android:text="1. Quel mot-clé définit une fonction en Python ?" android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/question1" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q1_option1" android:text="def"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_option2" android:text="func"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q1_option3" android:text="function"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Q2 -->
        <TextView android:text="2. Quelle fonction affiche du texte en Python ?" android:textSize="18sp" android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/question2" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q2_option1" android:text="echo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_option2" android:text="print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q2_option3" android:text="printf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Q3 -->
        <TextView android:text="3. Quel symbole termine une déclaration de fonction ?" android:textSize="18sp" android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/question3" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q3_option1" android:text=";"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_option2" android:text="."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q3_option3" android:text=":"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Q4 -->
        <TextView android:text="4. Quel symbole est utilisé pour les commentaires en Python ?" android:textSize="18sp" android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/question4" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q4_option1" android:text="//"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_option2" android:text="#"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q4_option3" android:text="/* */"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <!-- Q5 -->
        <TextView android:text="5. Quel type de données est une liste en Python ?" android:textSize="18sp" android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <RadioGroup android:id="@+id/question5" android:layout_width="match_parent" android:layout_height="wrap_content">
            <RadioButton android:id="@+id/q5_option1" android:text="tuple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_option2" android:text="dictionary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <RadioButton android:id="@+id/q5_option3" android:text="list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RadioGroup>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Soumettre"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:textColor="#000" />

    </LinearLayout>
</ScrollView>
